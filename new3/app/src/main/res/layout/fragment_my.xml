<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:background="#009959"
        android:text="我的信息"
        android:textSize="20dp"
        android:textColor="#fff"
        />
    <LinearLayout
        android:background="#009959"
       android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.nianchen.normaluniversitytourgroup.BaseClass.CircleImageView
            android:id="@+id/ima"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:clickable="true"/>
        <LinearLayout

            android:background="@drawable/shape_ljh"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="66dp">
            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textAlignment="center"
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="我的昵称:"
                    android:textColor="#547387"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="30dp"
                    android:textColor="#009959"
                    />

                <Button
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:text="更改昵称"
                       android:id="@+id/updatenick"/>
            </LinearLayout>
            <LinearLayout
                android:background="#fff"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="驴友号："
                    android:layout_marginLeft="20dp"
                    android:textSize="16dp"
                    android:textColor="#547387"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16dp"
                    android:textColor="#009959"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"

       >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/groupljh"
            android:layout_gravity="center"

            android:layout_marginLeft="20dp"/>
    <Button
        android:id="@+id/btn"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我加入的队伍"
        android:background="#fff"
        android:textSize="16dp"
     />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        >
        <ImageView

            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/guanyu"
            android:clickable="true"/>
    <TextView
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="关于我们"
        android:textSize="16dp"
        android:textColor="#547387"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/exit"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出登入"
        android:textColor="#f00"
        android:background="@drawable/shape_ljh"/>

</LinearLayout>